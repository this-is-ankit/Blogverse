<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('./partials/head') %>
      <title>Blog</title>
</head>

<body>
   <%- include('./partials/nav') %>
      <div class="container mt-4 fade-in">
         <h1 class="blog-title">
            <%= blog.title %>
         </h1>
         <img src="<%= blog.coverImageURL %>" alt="Blog Cover Image" class="img-fluid blog-img">
         <pre class="blog-body"><%= blog.body %></pre>
      </div>
      <div class="container mt-4">
         <img src="<%= blog.createdBy.profileImageURL %>" alt="User Profile" width="50px" class="rounded-circle">
         <%= blog.createdBy.fullName %>
      </div>
      <div class="container mt-3 comment-section">
         <h1>Comments (<%= comments.length %>)</h1>
         <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post" class="mt-3">
               <div class="mb-3">
                  <input name="content" type="text" class="form-control" id="content"
                     placeholder="Enter your comment here...">
               </div>
               <button type="submit" class="btn btn-primary">Add</button>
            </form>
            <% } %>
               <div class="mt-4">
                  <% comments.forEach(comment=> { %>
                     <div class="d-flex align-items-start mb-3">
                        <img src="<%= comment.createdBy.profileImageURL %>" alt="User Profile" width="50px"
                           class="rounded-circle me-3">
                        <div>
                           <strong>
                              <%= comment.createdBy.fullName %>
                           </strong>
                           <p class="mb-0">
                              <%= comment.content %>
                           </p>
                        </div>
                     </div>
                     <% }) %>
               </div>
      </div>
      <%- include('./partials/scripts') %>
</body>

</html>