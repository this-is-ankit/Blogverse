<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Add Blog Page</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4 fade-in">
            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="coverImage" class="form-label">Add Cover Image</label>
                    <input type="file" name="coverImage" class="form-control" id="coverImage">
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" class="form-control" id="title">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Body</label>
                    <textarea name="body" id="body" placeholder="Add the main body here..." class="form-control"
                        rows="10"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <%- include('./partials/scripts') %>
</body>

</html>