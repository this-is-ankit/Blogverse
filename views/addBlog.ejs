<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Add Blog Page</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <form action="/blog" method="post">
            <div class="container m-4">
                <div class="mb-3">
                    <label for="coverImage" class="form-control">Add Cover Images</label>
                    <input type="file" name="coverImage" class="form-control" id="coverImage" aria-describedby="coverImage">
                </div>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="title" class="form-control" id="title" aria-describedby="title">
                </div>
                <div class="mb-3">
                    <label for="body" class="form-label">Body</label>
                    <textarea name="body" id="body" placeholder="Add the main body here..." class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
        <%- include('./partials/scripts') %>
</body>

</html>